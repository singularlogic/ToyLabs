{
    "name": "laravel/laravel",
    "description": "The Laravel Framework.",
    "keywords": ["framework", "laravel"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=5.6.4",
        "backpack/base": "0.7.x",
        "backpack/crud": "^3.2",
        "cmgmyr/messenger": "^2.14",
        "creativeorange/gravatar": "^1.0",
        "cviebrock/eloquent-sluggable": "^4.2",
        "faustbrian/laravel-commentable": "^2.1",
        "hootlex/laravel-friendships": "^1.0",
        "laravel/framework": "5.4.*",
        "laravel/passport": "^4",
        "laravel/socialite": "^3.0",
        "laravel/tinker": "~1.0",
        "laravelcollective/html": "^5.4.0",
        "pusher/pusher-php-server": "~2.0",
        "rtconner/laravel-likeable": "~1.2",
        "spatie/laravel-medialibrary": "^5.0.0",
        "spatie/laravel-permission": "^2.1",
        "tom-lingham/searchy": "^2.0"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~5.7"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan optimize"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
